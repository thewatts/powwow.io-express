h1 Update User

form(method="POST" action="/users/#{user.login}")
  input(type="hidden", name="_method", value="PUT")
  p Login:
    input#login(type="text" name="login" value="#{user.login}")
  p Name:
    input#name(type="text" name="name" value="#{user.name}")
  p Email:
    input#email(type="text" name="email" value="#{user.email}")
  p Age:
    input#age(type="text" name="age" value="#{user.age}")
  p: button(type="submit") Update
